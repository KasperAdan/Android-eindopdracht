<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_background">


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <ImageButton
            android:id="@+id/closeButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/button_background"
            android:scaleX="1.3"
            android:scaleY="1.3"
            app:srcCompat="@drawable/back_icon" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@color/button_background"
            android:gravity="center"
            android:text="YOUR PROFILE"
            android:textAllCaps="false"
            android:textColor="@color/main_background"
            android:textSize="25sp"
            android:textStyle="bold|italic" />

        <ImageButton
            android:id="@+id/resetButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/button_background"
            android:scaleX="1.3"
            android:scaleY="1.3"
            app:srcCompat="@drawable/reset_icon" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/mainProfileLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:layout_constraintVertical_bias="0.0"
        android:layout_marginHorizontal="8dp">

        <LinearLayout
            android:id="@+id/firstTitleLayout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/totalDistance"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/totalDistance"
                android:textColor="@color/button_background"
                android:textAlignment="center"
                android:textSize="20dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/totalTime"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/totalTime"
                android:textColor="@color/button_background"
                android:textAlignment="center"
                android:textSize="20dp"
                android:textStyle="bold"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/firstNumberLayout"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/totalDistanceNumber"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text=""
                android:textColor="@color/button_background"
                android:textAlignment="center"
                android:textSize="20dp"/>

            <TextView
                android:id="@+id/totalTimeNumber"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text=""
                android:textColor="@color/button_background"
                android:textAlignment="center"
                android:textSize="20dp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/secondTitleLayout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/totalAvgDistance"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/totalAvgDistance"
                android:textColor="@color/button_background"
                android:textAlignment="center"
                android:textSize="20dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/totalAvgTime"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/totalAvgTime"
                android:textColor="@color/button_background"
                android:textAlignment="center"
                android:textSize="20dp"
                android:textStyle="bold"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/secondNumberLayout"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/totalAvgDistanceNumber"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text=""
                android:textColor="@color/button_background"
                android:textAlignment="center"
                android:textSize="20dp"/>

            <TextView
                android:id="@+id/totalAvgTimeNumber"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text=""
                android:textColor="@color/button_background"
                android:textAlignment="center"
                android:textSize="20dp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/thirdTitleLayout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/longestRoute"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/longestRoute"
                android:textColor="@color/button_background"
                android:textAlignment="center"
                android:textSize="20dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/totalAvgSpeed"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/totalAvgSpeed"
                android:textColor="@color/button_background"
                android:textAlignment="center"
                android:textSize="20dp"
                android:textStyle="bold"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/thirdNumberLayout"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/longestRouteNumber"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text=""
                android:textColor="@color/button_background"
                android:textAlignment="center"
                android:textSize="20dp"/>

            <TextView
                android:id="@+id/totalAvgSpeedNumber"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text=""
                android:textColor="@color/button_background"
                android:textAlignment="center"
                android:textSize="20dp"/>

        </LinearLayout>



    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>